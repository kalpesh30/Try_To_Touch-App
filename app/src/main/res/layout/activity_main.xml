<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/points1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/time_10"
        android:textSize="38sp"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="334dp"
        android:layout_height="358dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="116dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgVw1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="@string/todo"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:onClick="increaseScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/myimage" />

        <ImageView
            android:id="@+id/imgVw9"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="@string/todo"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/myimage" />


    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/points1"
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:text="@string/points"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        tools:text="Points: 0" />

</android.support.constraint.ConstraintLayout>